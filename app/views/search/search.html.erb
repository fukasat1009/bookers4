<h1>検索結果</h1>

<div class="container">
   <div class="row">
      <div class="col-xs-3" >
      </div>
         <div class="col-xs-9">
       

             <% if @user_or_book == "1"%>
                <h1>User</h1>
                    <table class="table table-striped">
                    	<thead>
                    		<tr>
                       		    <th width="10%">image</th>
                       	        <th width="40%">user</th>
                       	        <th width="50%">introduction</th>
                       	    </tr>
               
                            <% @users.each do |user| %>
                                <thead>
                                    <tr>
                                        <td><%= attachment_image_tag user, :profile_image, fallback:"no-image.png" , size: "50x50" %></td>
                                        <td><%= user.name %></td>
                                        <td><%= user.introduction %></td>
                                    </tr>
                                </thead>
                            <% end %>
                        </thead>
                   </table>

 
            <% elsif @user_or_book == "2" %>
                <h2>Book</h2>
                    <table class="table table-striped">
                        <thead>
                           	<tr>
                           		<th width="10%">image</th>
                           	    <th width="30%">user</th>
                           	    <th width="20%">title</th>
                           	    <th width="40%">body</th>
                           	</tr>
                        </thead>
                        <% @books.each do |book| %>
       
                            <thead>
                                <tr>
                 	                <td><%= attachment_image_tag book.user, :profile_image, fallback:"no-image.png" , size: "50x50" %></td>
                 	                
                 	                <td><%= book.user.name %></td>
                                    <td><%= book.title %></td>
                                    <td><%= book.body %></td>
                                </tr>
                            </thead>
                        <% end %>
                    </table>
                 <% else %>
            <% end %>
        </div>
    </div>
</div>_