<!DOCTYPE html>
<html>
 <body>

  <font color="green">
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
  </font>

  <div class="container">
   <div class="row">
    <div class="col-xs-3" >
      <h2>User info</h2>
        <table class="table table-striped">
          <tr>
           <td><%= attachment_image_tag @user, :profile_image, fallback:"no-image.png",size: "50x50" %></td>
          </tr>
          <tr>
         <th>name</th><td><%= @user.name %></td>
        </tr>
        <tr>
         <th>introduction</th><td><%= @user.introduction %></td>
           </tr>
         </table>
         <%= link_to "", edit_user_path(current_user),class:"btn btn-light btn-lg btn-block glyphicon glyphicon-wrench" %>
    
          <%= form_for @post do |f| %>
           <h2>New book</h2>
            <%= f.label :title %>
             <%= f.text_field :title %>
              <%= f.label :body %>
             <%= f.text_area :body %>
            <%= f.submit %>
           <% end %>
         </div>
         <div class="col-xs-9">
          <table class="table table-striped">
           <thead>
            <tr>
   	         <th width="10%">image</th>
   	          <th width="30%">title</th>
   	           <th width="40%">opinion</th>
               <th width="10%">comment</th>
               <th width="10%">favorite</th>
            </tr>
            </thead>
            <% @user.books. each do |book| %>
          <tbody>
           <tr>
            <td>
     <%= attachment_image_tag @user, :profile_image, fallback:"no-image.png",size: "50x50" %>
      </td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
      <td><%= book.book_comments.count %>ä»¶</td>
      <td>
        <% if book.favorited_by?(current_user) %>
      

           <%= link_to book_favorites_path(book), method: :delete do %>
           <i class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></i>
           <% end %>
           <%= book.favorites.count %> 
       
       
            <% else %>
         
                <%= link_to book_favorites_path(book), method: :post do %>
                  <i class="glyphicon glyphicon-heart" aria-hidden="true"></i>
                  <% end %>
                <%= book.favorites.count %> 
               
           
        <% end %>



      </td>
    </div>
      
     </tr>
    </tbody>
     <% end %>
   </table>
    </div>
   </div>
  </div>
 </body>
</html>



