<!DOCTYPE html>
<html>
 <body>

      <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
  <div class="container">
   <div class="row">
    <div class="col-xs-3" >
      <h2>User info</h2>
        <table class="table table-striped">
          <tr>
           <td><%= attachment_image_tag @book.user, :profile_image, fallback:"no-image.png",size: "50x50" %></td>
          </tr>
          <tr>
         <th>name</th>
           <td>
           <!-- ここにユーザーネームを実装-->
           <%= @book.user.name %>
           </td>
             </tr>
               <tr>
                 <th>introduction</th>
                   <td>
                   <!-- ここにプロフィール文を実装-->
                    <%= @book.user.introduction %>
                   </td>
                </tr>
         </table>
         <%= link_to "", user_path(current_user),class:"btn btn-light btn-lg btn-block glyphicon glyphicon-wrench" %>
        
    
          <%= form_for @post do |f| %>
           <h2>New book</h2>
            <%= f.label :title %>
             <%= f.text_field :title %>
              <%= f.label :body %>
             <%= f.text_area :body %>
            <%= f.submit %>
           <% end %>
         </div>
         <div class="col-xs-9">
          <table class="table table-striped">
           <thead>
            <tr>
             <th width="10%">image</th>
              <th width="40%">title</th>
               <th width="40%">opinion</th>
               <th width="10%">edit</th>
            </tr>
            </thead>
        
            <tbody>
              <h2>Book detail</h2>
              <tr>
               <td><%= link_to user_path(@book.user.id) do %>
                <%= attachment_image_tag  @book.user, :profile_image, fallback:"no-image.png",size: "50x50" %><% end %>
                <%= link_to @book.user.name ,user_path(@book.user.id) %>
                
                 
               </td>
               <td><%= @book.title %></td>
               <td><%= @book.body %></td>
               <% if @book.user == current_user %>
               <td><%= link_to "Edit", edit_book_path(@book),class: "btn btn-default" %></td>
                  <td><%= link_to "Destroy", book_path(@book), method: :delete, data:{confirm: "本当に削除しますか？"}, class: "btn btn-default" %></td>
                   <% end %>
                   
               </td>
              </tr>
            </tbody>
      </table>
      </div>
    </div>
  </div>
 </body>
</html>

